<?xml version="1.0"?>
<!DOCTYPE dataModel SYSTEM "tableStructure.dtd">

<dataModel>	
<title>plantTaxa Name (Table)</title>
<author>J. Harris</author>
<institution>NCEAS</institution>
<contributor>null</contributor>
<description>null</description>
<date>Tue Sep 26 12:46:33 PDT 2000</date>

<entity>
	<entityName>plantTaxa.NAME</entityName>
	<entitySummary>Stores plant name related information</entitySummary>

<entityDescription>This table stores information about names applied
to concepts/circumscriptions.  The design of this table allows for the name of the 
author of that name to be stored dierctly within the table.  In the current (prototype)
version of the datbase, the entire name is stored in a single string and in this case
is limited to the genus and species name only.  In subsequent versions, this table will 
be more flexible and will hold a much broader range of taxonomic data. 
</entityDescription>

	<attribute> 
		<attName>NAME_ID</attName>
		<attNulls>No</attNulls>	
		<attType>INT</attType>
		<attKey>P</attKey>
		<attReferences>n/a</attReferences>
		<attNotes>G</attNotes>
		<attDefinition>Database assigned value corresponding to a unique taxon name.</attDefinition>
	</attribute>



	<attribute>
                <attName>SYMBOL</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT(8)</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes></attNotes>
                <attDefinition>Symbol for the plant name.</attDefinition>
        </attribute>


	<attribute>
                <attName>NAME</attName>
                <attNulls>No</attNulls>
                <attType>TEXT(200)</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes></attNotes>
                <attDefinition>Stores the name string - which currently is just the genus and species name</attDefinition>
        </attribute>

	<attribute>
                <attName>REF_ID</attName>
                <attNulls>No</attNulls>
                <attType>INT</attType>
                <attKey>F</attKey>
                <attReferences>REFERENCE</attReferences>
                <attNotes>There must be one reference for each name</attNotes>
                <attDefinition>This is the foreign key into the REFERENCE table.</attDefinition>
        </attribute>

	<attribute>
                <attName>DATE_ENTERED</attName>
                <attNulls>Yes</attNulls>
                <attType>DATE</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes></attNotes>
                <attDefinition>This is the date that the name was entered into the database</attDefinition>
        </attribute>

	<attribute>
                <attName>COMMONNAME</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT(100)</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes></attNotes>
                <attDefinition>The common name for more scientific name stored in the NAME attribute.</attDefinition>
        </attribute>

	<attribute>
                <attName>FAMILY</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT(100)</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes></attNotes>
                <attDefinition>The family in which the plant stored in NAME belongs. </attDefinition>
        </attribute>

	<attribute>
                <attName>AUTHORNAME</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT(100)</attType>
                <attKey></attKey>
                <attReferences>n/a</attReferences>
                <attNotes>this field is denormalized from the REFERENCE table.</attNotes>
                <attDefinition>Stores the name of the author of the plant Name </attDefinition>
        </attribute>




	<children>REFERENCE</children>
</entity>
</dataModel>	
