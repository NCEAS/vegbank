<entity>
	<entityName>vegPlot.inferenceClassIndex</entityName>
	<entitySummary>This table stores information about indices of classes that 
	may be used to characterize a population of plants into a common family, that 
	is then recognized by the worker and generalized to a defined are to infer 
	properties of the family. </entitySummary>
	<entityDescription> </entityDescription>
	<attribute> 
		<attName>CLASSINDEX_ID</attName>
		<attNulls>No</attNulls>	
		<attType>NUMBER</attType>
		<attKey>PK</attKey>
		<attReferences>n/a </attReferences>
		<attNotes>n/a</attNotes>
		<attDefinition>Primary key for the inferenceClassIndex table.</attDefinition>
	</attribute>



	<attribute>
                <attName>TAXONOBSERVATION_ID</attName>
                <attNulls>Yes</attNulls>
                <attType>NUMBER</attType>
                <attKey>FK</attKey>
                <attReferences>taxonInference</attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>Foreign key into the taxonObservation 
		table.</attDefinition>
        </attribute>


	<attribute>
                <attName>OBS_ID</attName>
                <attNulls>Yes</attNulls>
                <attType>NUMBER</attType>
                <attKey>FK</attKey>
		<attReferences>plotObservation</attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Foreign key into the plotObservation table.</attDefinition>
        </attribute>


 <attribute>
                <attName>STRATUMCOMPOSITION_ID</attName>
                <attNulls>Yes</attNulls>
                <attType>NUMBER</attType>
                <attKey>FK</attKey>
                <attReferences>strataComposition</attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Foreign key into the strataComposition table.</attDefinition>
 </attribute>


        <attribute>
                <attName>indexType</attName>
                <attNulls>No</attNulls>
                <attType>VARCHAR2 </attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>This attribute defines the type of class that the 
		index is a component of.  Type may include height class or diameter 
		class.</attDefinition>
        </attribute>
	
	<attribute>
                <attName>className</attName>
                <attNulls>Yes</attNulls>
                <attType>VARCHAR2</attType>
                <attKey>n/a </attKey>
		<attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>This is the name of the class in which this index is 
		a member of.</attDefinition>
        </attribute>


	
	<attribute>
                <attName>indexCode</attName>
                <attNulls>Yes</attNulls>
                <attType>VARCHAR2</attType>
                <attKey>n/a </attKey>
		<attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>This is the name/code of the index itself.  For 
		example: a class having a className "x" may used to reflect height 
		of trees and a specific index with the indexCode of "1" may be used as 
		a proxy for all trees between 0 - 10 meters.</attDefinition>
        </attribute>



        <attribute>
                <attName>lowerLimit</attName>
                <attNulls>No</attNulls>
                <attType>NUMBER</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Lower limit of the index in meters</attDefinition>
        </attribute>

	<attribute>
                <attName>upperLimit</attName>
                <attNulls>No</attNulls>
                <attType>NUMBER</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Upper limit of the index in meters</attDefinition>
        </attribute>

	<attribute>
                <attName>medianValue</attName>
                <attNulls>No</attNulls>
                <attType>NUMBER</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Median value of the index in meters</attDefinition>
        </attribute>

	<attribute>
                <attName>indexDescription</attName>
                <attNulls>No</attNulls>
                <attType>TEXT</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Description of the index.</attDefinition>
        </attribute>
	
	 <attribute>
                <attName>inferenceArea</attName>
                <attNulls>No</attNulls>
                <attType>NUMBER</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a </attReferences>
                <attNotes>n/a </attNotes>
                <attDefinition>Inference area in meters.</attDefinition>
        </attribute>


	<children> </children>
</entity>
</dataModel>	
