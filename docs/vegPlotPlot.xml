	<contributor>R.K. Peet</contributor>
	<description/>
	<date>23 Sep 2001</date>
	<entity>
		<entityName>vegPlot.plot</entityName>
		<entitySummary>This table stores general, constant information about the a given plot </entitySummary>
		<entityDescription>plot contains Plot location, dimension, and similarly constant site data plus metadata that need be stored only once.   Transient observational information (procured during the first or subsequent observation events) are stored separately in observation or its children. 	</entityDescription>
		<attribute>
			<attName>PLOT_ID</attName>
			<attNulls>No</attNulls>
			<attType>INT</attType>
			<attKey>PK</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>Primary key for plot</attNotes>
			<attDefinition>Database generated identifier assigned to each unique plot. </attDefinition>
		</attribute>
		<attribute>
			<attName>PROJECT_ID</attName>
			<attNulls>Yes</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>project,project_ID</attReferences>
			<attNotes>Foreign key into the project table.</attNotes>
			<attDefinition>Link between a plot and the project within which the plot was established</attDefinition>
		</attribute>
		<attribute>
			<attName>authorPlotCode</attName>
			<attNulls>No</attNulls>
			<attType>VARCHAR(30)</attType>
			<attKey>n/a </attKey>
			<attReferences>n/a </attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Author's Plot number/code, or the original plot number if taken from literature. </attDefinition>
		</attribute>
		<attribute>
			<attName>CITATION_ID</attName>
			<attNulls>Yes</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>citation.CITATION_ID</attReferences>
			<attNotes>Foreign key into the citation table</attNotes>
			<attDefinition>Link to the source citation from which this plot record was taken</attDefinition>
		</attribute>
		<attribute>
			<attName>PARENT_ID</attName>
			<attNulls>Yes</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>plot.PLOT_ID</attReferences>
			<attNotes>Recursive foreign key</attNotes>
			<attDefinition>Link to the parent plot when plot is nested within another plot. </attDefinition>
		</attribute>
		<attribute>
			<attName>SAMPLEMETHOD_ID</attName>
			<attNulls>Yes</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>sampleMethod.SAMPLEMETHOD_ID</attReferences>
			<attNotes>Foreign key into the sampleMethod table</attNotes>
			<attDefinition>Link to a specific methodology which provides a general name and description, plus many default values for use in the plot table</attDefinition>
		</attribute>
		<attribute>
			<attName>latitude</attName>
			<attNulls>No </attNulls>
			<attType>NUMERIC(22,6)</attType>
			<attKey>n/a </attKey>
			<attReferences>n/a </attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Latitude of the plot origin in degrees and decimals, datum =WGS84 </attDefinition>
		</attribute>
		<attribute>
			<attName>longitude</attName>
			<attNulls>No</attNulls>
			<attType>NUMERIC(3,8)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Longitude of the plot origin in degrees and decimals, datum = WGS84</attDefinition>
		</attribute>
		<attribute>
			<attName>locationAccuracy </attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(3,8)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Estimated accuracy of the location of the plot. Plot origin has a 95% or greater probability of being within this many meters of the reported location.</attDefinition>
		</attribute>
		<attribute>
			<attName>authorE</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Original E-W coordinate as recorded by the author</attDefinition>
		</attribute>
		<attribute>
			<attName>authorN</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Original N-S coordinate as recorded by the author</attDefinition>
		</attribute>
		<attribute>
			<attName>authorZone</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Original UTM zone reported by the author</attDefinition>
		</attribute>
		<attribute>
			<attName>authorDatum</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Original datum reported by the author</attDefinition>
		</attribute>
		<attribute>
			<attName>authorLocation</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(200)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Original location as described by author (eg Town-Range-Section)</attDefinition>
		</attribute>
		<attribute>
			<attName>locationNarrative</attName>
			<attNulls>Yes</attNulls>
			<attType>TEXT</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Text description that provides information useful for plot relocation.</attDefinition>
		</attribute>
		<attribute>
			<attName>geography</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list - 3-tier hierarchy (could be calculated)</attNotes>
			<attDefinition>Location selected from three-level hierarchival list of geographic units including Continent, Country/Territory/Area, State/Province/Region.</attDefinition>
		</attribute>
		<attribute>
			<attName>county</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>County (primarily for US)</attDefinition>
		</attribute>
		<attribute>
			<attName>ecoregion</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list (could be calculated)</attNotes>
			<attDefinition>Bailey ecoregion or TNC ecoregion</attDefinition>
		</attribute>
		<attribute>
			<attName>mapQuad</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>open list (could be calculated)</attNotes>
			<attDefinition>Name of the USGS quad if US, otherwise map used.</attDefinition>
		</attribute>
		<attribute>
			<attName>locationConfidentiality</attName>
			<attNulls>No</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>FK</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list, default=0</attNotes>
			<attDefinition>Is the location to be considered confidential? 0=no, 1= 1km radius, 2=10km radius, 3=100km radius, 4=location embargo, 5=public embargo on all plot data, 6=full embargo on all plot data. This applies also to "geography" and "county".</attDefinition>
		</attribute>
		<attribute>
			<attName>ownerConfidentiality</attName>
			<attNulls>No</attNulls>
			<attType>VARCHAR(20)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list, default=0</attNotes>
			<attDefinition>Indicates if land ownership is confidential. 0=no, 1=public embargo on ownership, 2=full embargo on ownership.  Actual owner is tracked via observationContributor with roleCode of  owner</attDefinition>
		</attribute>
		<attribute>
			<attName>azimuth </attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(3,0)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>This element stores the azimuth of the x-axis used to describe the relative coordinate system for plot shape (dsgpoly) and other spatial information about the plot. Typically the azimuth is parallel to the long axis of the plot (in the case of a rectangle).</attDefinition>
		</attribute>
		<attribute>
			<attName>dsgpoly</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(2000)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>This field is a text string containing the points circumscribing a plot area.  These points are anticipated to have been collected using a GPS instrument or calculated from the plot shape and area. Points are x-y coordinates in m relative to plot origin.
		</attDefinition>
		</attribute>
		<attribute>
			<attName>shape</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50) </attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>open list</attNotes>
			<attDefinition>Shape of the plot area. </attDefinition>
		</attribute>
		<attribute>
			<attName>area</attName>
			<attNulls>No </attNulls>
			<attType>NUMERIC(5,3)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Total area of the plot in m2.  If many subplots, this area includes the subplots and the intersticial space
		</attDefinition>
		</attribute>
		<attribute>
			<attName>areaAccuracy</attName>
			<attNulls>Yes</attNulls>
			<attType>Numeric(4,0)</attType>
			<attKey>n/a</attKey>
			<attReferences>na/</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>The accuracy of the plot "area" in percentage of the "area". </attDefinition>
		</attribute>
		<attribute>
			<attName>standSize</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(10)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>The extent of this community occurrence in relation to the plot size: extensive (>100x plot), large (10-100x plot), small (3-10x plot), very small (1-3x plot).</attDefinition>
		</attribute>
		<attribute>
			<attName>placementMethod</attName>
			<attNulls>Yes</attNulls>
			<attType>TEXT</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Description of the method used to determine the placement of a plot.</attDefinition>
		</attribute>
		<attribute>
			<attName>permanent</attName>
			<attNulls>Yes</attNulls>
			<attType>BOOLEAN</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Is the plot marked so as to be precisely relocatable.</attDefinition>
		</attribute>
		<attribute>
			<attName>layoutNarative</attName>
			<attNulls>Yes</attNulls>
			<attType>TEXT</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Text description of and the for rationale the layout of the plot.</attDefinition>
		</attribute>
		<attribute>
			<attName>elevation</attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(4,1)</attType>
			<attKey>n/a </attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>The elevation of the plot origin in meters above sea level.</attDefinition>
		</attribute>
		<attribute>
			<attName>elevationAccuracy</attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(4,0)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>The accuracy of the elevation in percentage of the elevation reported.</attDefinition>
		</attribute>
		<attribute>
			<attName>slopeAspect</attName>
			<attNulls>Yes </attNulls>
			<attType>NUMERIC(3,0) </attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>optional list that converts</attNotes>
			<attDefinition>Azimuth of slope gradient (0-360 degrees); if too flat or irregular to determine, = -1.</attDefinition>
		</attribute>
		<attribute>
			<attName>slopeGradient</attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(3,0)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a </attReferences>
			<attNotes>optional list that converts</attNotes>
			<attDefinition>Inclination of slope in degrees; if too irregular to determine, = -1.</attDefinition>
		</attribute>
		<attribute>
			<attName>topoPosition </attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a </attKey>
			<attReferences> n/a </attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>Position of the plot on land surface (e.g., Summit, shoulder, upper slope, middle slope, lower slope, toeslope, no slope, channel bed, dune swale, pond).  </attDefinition>
		</attribute>
		<attribute>
			<attName>landform</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50)</attType>
			<attKey>n/a </attKey>
			<attReferences>n/a </attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>Landform type.</attDefinition>
		</attribute>
		<attribute>
			<attName>geology</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(50) </attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list (perhaps 2-tier heirarchy)</attNotes>
			<attDefinition>Surface geology type. </attDefinition>
		</attribute>
		<attribute>
			<attName>SOIL_ID</attName>
			<attNulls>Yes</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>soil.SOIL_ID</attReferences>
			<attNotes>closed list - hierarchy</attNotes>
			<attDefinition>Soil taxon within the USDA classification hierarchy, including Order, Suborder, Greatgroup, Subgroup, Family and Series.</attDefinition>
		</attribute>
