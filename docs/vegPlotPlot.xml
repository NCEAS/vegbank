                <attType>NUMBER</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a</attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>This field contains an index which represents
		the degree of land owner confidentiality.  Depending on the 
		value of this index, the plot location will be generalized to 
		50 km.</attDefinition>
        </attribute>

	
	<attribute>
                <attName>layoutNarative</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a</attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>Textual description of the rationale for deciding 
		on the layout of a given plot.</attDefinition>
        </attribute>
	
	<attribute>
                <attName>placementMethod</attName>
                <attNulls>Yes</attNulls>
                <attType>TEXT</attType>
                <attKey>n/a</attKey>
                <attReferences>n/a</attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>Description of the method used determining the 
		placement of a plot.</attDefinition>
        </attribute>
	
	<attribute>
                <attName>sourceCitation</attName>
                <attNulls>Yes</attNulls>
                <attType>NUMBER</attType>
                <attKey>FK</attKey>
                <attReferences>n/a</attReferences>
                <attNotes>n/a</attNotes>
                <attDefinition>Link between a plot and a citation.</attDefinition>
        </attribute>
	
	<attribute>
                <attName>sensitivity</attName>
                <attNulls>Yes</attNulls>
                <attType>NUMBER</attType>
                <attKey>FK</attKey>
                <attReferences>n/a</attReferences>
                <attNotes>n/a</attNotes>
