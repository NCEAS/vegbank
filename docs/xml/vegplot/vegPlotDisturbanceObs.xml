<!DOCTYPE dataModel SYSTEM "tableStructure.dtd">
<dataModel>
	<title> Vegetaton Plots Database Component Description:disturbanceObs</title>
	<author>J. Harris </author>
	<institution>NCEAS </institution>
	<contributor>R.K. Peet</contributor>
	<description/>
	<date>31 October 2001</date>
	<entity>
		<entityName>vegPlot.disturbanceObs</entityName>
		<entitySummary>This table stores plot observation information pertaining toobserver estamation of the disturbance history of the plot. </entitySummary>
		<entityDescription>disturbanceObs is  a child of observation; a plot might experience many types of disturbance unique to different observation events.</entityDescription>
		<attribute>
			<attName>disturbanceObs</attName>
			<attNulls>No</attNulls>
			<attType>INT</attType>
			<attKey>PK</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>Primary key for disturbanceObs</attNotes>
			<attDefinition>Database generated identifier assigned to each unique disturbance observation..</attDefinition>
		</attribute>
		<attribute>
			<attName>OBSERVATION_ID</attName>
			<attNulls>No</attNulls>
			<attType>INT</attType>
			<attKey>FK</attKey>
			<attReferences>observation.OBSERVATION_ID</attReferences>
			<attNotes>Foreign key that points to the parent observation for this disturbance record</attNotes>
			<attDefinition>Link to the observation event with which this report of a disturbance event is associated.</attDefinition>
		</attribute>
		<attribute>
			<attName>disturbanceType</attName>
			<attNulls>No</attNulls>
			<attType>VARCHAR(30)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>The type of disturbance being reported</attDefinition>
		</attribute>
		<attribute>
			<attName>disturbanceIntensity</attName>
			<attNulls>Yes</attNulls>
			<attType>VARCHAR(30)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>closed list</attNotes>
			<attDefinition>Intensity or degree of the disturbance. </attDefinition>
		</attribute>
		<attribute>
			<attName>diosturbanceAge</attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(4,2)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Estimated time in years since the disturbance event.</attDefinition>
		</attribute>
		<attribute>
			<attName>disturbanceExtent</attName>
			<attNulls>Yes</attNulls>
			<attType>NUMERIC(3,0)</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Percent of the plot that experienced the event.</attDefinition>
		</attribute>
		<attribute>
			<attName>disturbanceComment</attName>
			<attNulls>Yes</attNulls>
			<attType>TEXT</attType>
			<attKey>n/a</attKey>
			<attReferences>n/a</attReferences>
			<attNotes>n/a</attNotes>
			<attDefinition>Text description of details of the disturbance and its impact on the vegetation.</attDefinition>
		</attribute>
		<children/>
	</entity>
</dataModel>
