		<attName>obs_id </attName>
		<attNulls>No</attNulls>	
		<attType>NUMBER</attType>
		<attKey>P</attKey>
		<attNotes> </attNotes>
		<attDefinition>This is an internal database identifier assigned to each unique observation. </attDefinition>
	</attribute>



