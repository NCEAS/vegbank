<!-- The root element -->

<!ENTITY % vegetation_description "(plot_id, species+)">
<!ELEMENT vegetation_description (plot_id, species+)>


<!ELEMENT plot_id (#PCDATA)>
<!ELEMENT species (orig_species,stratum+)>
<!ELEMENT orig_species (#PCDATA)>
<!ELEMENT stratum (stratum_type, percent_cover, dominance)>
<!ELEMENT stratum_type (#PCDATA)>
<!ELEMENT percent_cover (#PCDATA)>
<!ELEMENT dominance (id, layer_height, physiogn_A, physiogn_B)>
<!ELEMENT id (#PCDATA)>
<!ELEMENT layer_height (#PCDATA)>
<!ELEMENT physiogn_A (#PCDATA)>
<!ELEMENT physiogn_B (#PCDATA)>




