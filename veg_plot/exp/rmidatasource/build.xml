<project name="rmi-datasource" default="jar" basedir=".">
	
	<!-- INITIATION -->
	<target name="init">
  
		<!-- RELEVANT DIRECTORIES -->
		<property name="current_dir" value="./" />
		<property name="src" value="./src" />
		<property name="build" value="./build" />
		<property name="lib" value="./lib" />
		<property name="bin" value="./" />
		<property name="translators" value="./lib/datatranslator.jar" />

		
		<filter token="release" value="alpha-20020120"/>
		<filter token="authors" value="HARRIS"/>
		<property name="cpath" value="${translators}:${xerces}:${xalan}:${build}"/>
</target>

	
	<!-- PREPARE -->
	<target name="prepare" depends="init">
		<mkdir dir="${build}" />
	</target>	
	
	
	
	<!-- COMPILE -->
	<target name="compile" depends="prepare">

		<echo message="Compiling the RMI Code"/>
		
		<javac srcdir="${src}" 
			classpath="${cpath}"
			includes="
			 DataSourceClient.java
			 DataSourceServer.java
			 DataSourceServerInterface.java
			 DataSourceImpl.java
			 DataSourceClientApplet.java
			"
			destdir="${build}"
		/>
	</target>	
	
	<!-- RMI COMPILE -->
	<target name="rmic" depends="compile">

		<echo message="Compiling the RMI Stubs and Skeletons"/>
		<rmic classname="DataSourceImpl" base="${build}" />
	</target>	
	
	<!-- JAR -->
	<target name="jar" depends="rmic">
		<jar jarfile ="${lib}/rmidatasource.jar"
			basedir="${build}"
			includes="** "
		/>
	</target>
	
		
	<!-- DIST  - this will put the package into the db access lib -->
	<target name="dist" depends="jar">
		<copy todir="../database_access/lib/" filtering="no" >
			<fileset dir="${lib}" >
  	    <include name="datatranslator.jar"/>
  	  </fileset>
  	</copy>
	</target>
	
	
	<!-- TEST - this will test the package -->
	<target name="test">
		<exec dir="./" executable="write-VegBank-plot.sh" os="Linux" >
		</exec>
	</target>
	
	
	
	

</project>
