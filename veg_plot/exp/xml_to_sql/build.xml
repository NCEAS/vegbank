<project name="VegClient" default="jar" basedir=".">
	<!-- INITIATE -->
	<target name="init">
		<tstamp/>
		<!-- RELAVANT Properties-->
		<property name="current_dir" value="./" />
		<property name="src" value="./src" />
		<property name="build" value="./build" />
		<property name="lib" value="./lib" />
		<property name="bin" value="./bin" />
		
		

	  <property name="xerces" value="./lib/xerces_1_4.jar" />
		<property name="xalan" value="./lib/xalan_1_2_2.jar" />
		<property name="xml_editor" value="./lib/xmloperator.jar" />
		<property name="db_access_module" value="./lib/dbAccess.jar" />

		<filter token="release" value="alpha-20011010"/>
		<filter token="authors" value="HARRIS"/>
	
	
	<property name="cpath" value="${xalan}:${xerces}:${xml_editor}:${db_access_module}:./"/>
	</target>

	<!-- PREPARE -->
	<target name="prepare" depends="init">
		<mkdir dir="./bin" />
		<mkdir dir="${build}" />
	</target>	
	

		
		<target name="copy" depends="prepare">
		<!-- java files -->
		<copy todir="${build}" filtering="yes" >
			<fileset dir="${src}" >
  	    <include name="**.java"/>
  	  </fileset>
  	</copy>
		
	</target>	
 
	<!-- COMPILE -->
	<target name="compile" depends="copy">
		<!-- java compile -->
		<javac srcdir="${build}" 
			classpath="${cpath}"
			includes=" **.java "
			destdir="${build}"
		/>	
	</target>
	
	
	<!-- JAR -->	
	<target name="jar" depends="compile">
		<jar jarfile ="${lib}/xmltosql.jar"
			basedir="${build}"
			includes="**"/>
	</target>

	
	<!-- CLEAN -->
	<target name="clean" depends="jar">	
  	<delete file="${buile}/**"/>
	</target>


	
	
</project>
