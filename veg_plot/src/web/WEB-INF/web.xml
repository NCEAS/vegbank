<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Vegbank Web Interface</display-name>
    <description>Vegbank servlets</description>


    <servlet>
      <servlet-name>DataSubmitServlet</servlet-name>
      <description>as it zounds</description>
      <servlet-class>org.vegbank.servlet.request.DataSubmitServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    
    <servlet-mapping>
      <servlet-name>DataSubmitServlet</servlet-name>
      <url-pattern>/servlet/DataSubmitServlet</url-pattern>
    </servlet-mapping>  

    <servlet>
      <servlet-name>viewdata</servlet-name>
      <description>servlet to allow for the viewing of an xml doc</description>
      <servlet-class>org.vegbank.servlet.request.viewData</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>viewdata</servlet-name>
      <url-pattern>/servlet/viewdata</url-pattern>
    </servlet-mapping>  


    <servlet>
      <servlet-name>stylesheetgenerator</servlet-name>
      <description>servlet to create a custom stylesheet</description>
      <servlet-class>org.vegbank.servlet.stylesheet.StyleSheetGenerator</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>stylesheetgenerator</servlet-name>
      <url-pattern>/servlet/stylesheetgenerator</url-pattern>
    </servlet-mapping>  



    <servlet>
      <servlet-name>result-download</servlet-name>
       <description>a servlet to handle the downloading of a resultset that was just returned from vegbank</description>
      <servlet-class>org.vegbank.servlet.request.fileDownload</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>result-download</servlet-name>
      <url-pattern>/servlet/result-download</url-pattern>
    </servlet-mapping>  


    <servlet>
      <servlet-name>framework</servlet-name>
      <description>The general servlet framework containing a varaiety of utilities</description>
      <servlet-class>org.vegbank.servlet.framework.FrameworkServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>framework</servlet-name>
      <url-pattern>/servlet/framework</url-pattern>
    </servlet-mapping>  

    <servlet>
      <servlet-name>authenticate</servlet-name>
       <description>A standalone servlet used for authenticating a user</description>
      <servlet-class>org.vegbank.servlet.authentication.AuthenticationServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>authenticate</servlet-name>
      <url-pattern>/servlet/authenticate</url-pattern>
    </servlet-mapping>  


    <servlet>
      <servlet-name>dataexchange</servlet-name>
      <description>Handles uploading and downloading of files</description>
      <servlet-class>org.vegbank.servlet.datafileexchange.DataExchangeServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>dataexchange</servlet-name>
      <url-pattern>/servlet/dataexchange</url-pattern>
    </servlet-mapping>  

    <servlet>
      <servlet-name>usermanagement</servlet-name>
      <description>A standalone servlet used for authenticating a user</description>
      <servlet-class>org.vegbank.servlet.usermanagement.UserManagementServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>usermanagement</servlet-name>
      <url-pattern>/servlet/usermanagement</url-pattern>
    </servlet-mapping>  

    <servlet>
      <servlet-name>DataRequestServlet</servlet-name>
      <description>A</description>
      <servlet-class>org.vegbank.servlet.request.DataRequestServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>DataRequestServlet</servlet-name>
      <url-pattern>/servlet/DataRequestServlet</url-pattern>
    </servlet-mapping>  

</web-app>
