<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<!--
    Validation Rules for the Vegbank application 

    $Id: validation.xml,v 1.4 2003-10-24 19:26:40 farrell Exp $
-->

<form-validation>


    <!-- ========== Default Language Form Definitions ===================== -->
    <formset>

        <form name="AddReferenceForm">
            <field property="reference.shortname"
                   depends="required">
              <arg0   key="reference.shortname" resource="false"/>
            </field>
            <field property="reference.title"
                   depends="required">
              <arg0   key="reference.title" resource="false"/>
            </field>
            <field property="reference.pubdate"
                    depends="date">
              <arg0   key="reference.pubDate"
                      resource="false"/>
              <var>
                <var-name>datePattern</var-name>
                <var-value>MM/dd/yyyy</var-value>
              </var>
            </field>
        </form>

        <form name="AddJournalForm">
            <field property="referenceJournal.journal"
                   depends="required">
              <arg0   key="referenceJournal.journal" resource="false"/>
            </field>
        </form>

        <form name="AddCoverMethodForm">
            <field property="coverMethod.covertype"
                   depends="required">
              <arg0   key="coverMethod.coverType" resource="false"/>
            </field>
        </form>

        <form name="AddStratumMethodForm">
            <field property="stratumMethod.stratummethodname"
                   depends="required">
              <arg0   key="stratumMethod.stratumMethodName" resource="false"/>
            </field>
            <field property="stratumMethod.stratummethoddescription"
                   depends="required">
              <arg0   key="stratumMethod.stratumMethodDescription" resource="false"/>
            </field>
        </form>

        <form name="AddPartyForm">
            <field property="party.surname"
                   depends="required">
              <arg0   key="party.surName" resource="false"/>
            </field>
            <!--
            <field property="organization_id"
                   depends="integer">
              <arg0   key="organization" resource="false"/>
            </field>
            -->
	</form>

        <form name="UploadPlotForm">
            <field property="archiveType"
                   depends="required">
              <arg0   key="Archive type" resource="false"/>
            </field>
            <field property="plotFile"
                   depends="required">
              <arg0   key="Plot data file" resource="false"/>
            </field>
            <field property="updateArchivedPlot"
                   depends="required">
              <arg0   key="Is plot already archived" resource="false"/>
            </field>
        </form>


	<form name="DisplayPlotForm">
	    <field property="resultType"
		depends="required">
              <arg0   key="The type of result requested" resource="false"/>
            </field>
	    <field property="plotId"
		depends="required">
              <arg0   key="The primary key of the plot" resource="false"/>
            </field>
	</form>


    </formset>


</form-validation>
