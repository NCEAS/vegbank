<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
 <data-sources/>
 <form-beans>
  <form-bean name="logonForm" type="org.vegbank.nvcrs.web.LogonForm"/>
  <form-bean name="userDetailForm" type="org.vegbank.nvcrs.web.UserDetailForm"/>
  <form-bean name="usr_form" type="org.vegbank.nvcrs.web.usr_Form"/>
  <form-bean name="proposal_form" type="org.vegbank.nvcrs.web.proposal_Form"/>
  <form-bean name="project_form" type="org.vegbank.nvcrs.web.project_Form"/>
  <form-bean name="type_form" type="org.vegbank.nvcrs.web.type_Form"/>
  <form-bean name="plot_form" type="org.vegbank.nvcrs.web.plot_Form"/>
  <form-bean name="composition_form" type="org.vegbank.nvcrs.web.composition_Form"/>
  <form-bean name="typename_form" type="org.vegbank.nvcrs.web.typename_Form"/>
  <form-bean name="typereference_form" type="org.vegbank.nvcrs.web.typereference_Form"/>
  <form-bean name="distribution_form" type="org.vegbank.nvcrs.web.distribution_Form"/>
 </form-beans>
 <global-exceptions/>
 <global-forwards>
  <forward name="home" path="/index.jsp"/>
  <forward name="error" path="/errorpage.jsp"/>
 </global-forwards>
 <action-mappings>
  <action name="logonForm" path="/logon" scope="request"
   type="org.vegbank.nvcrs.web.LogonAction" validate="yes">
   <forward name="main" path="/main.jsp" redirect="yes"/>
   <forward name="login" path="/login.jsp" redirect="yes"/>
  </action>
  <action name="usr_form" path="/usr" scope="session"
   type="org.vegbank.nvcrs.web.usr_Action" validate="yes">
   <forward name="success" path="/userinfo.jsp" redirect="yes"/>
   <forward name="cancel" path="/index.jsp" redirect="yes"/>
   <forward name="register_error" path="/registererror.jsp" redirect="yes"/>
   <forward name="register_success" path="/main.jsp" redirect="yes"/>
  </action>
  <action name="proposal_form" path="/proposal" scope="session"
   type="org.vegbank.nvcrs.web.proposal_Action" validate="yes">
   <forward name="error" path="/errorpage.jsp" redirect="yes"/>
   <forward name="success" path="/proposal_main.jsp" redirect="yes"/>
   <forward name="cancel" path="/main.jsp" redirect="yes"/>
  </action>
  <action name="project_form" path="/project" scope="session"
   type="org.vegbank.nvcrs.web.project_Action" validate="yes">
   <forward name="success" path="/project_main.jsp" redirect="yes"/>
   <forward name="error" path="/errorpage.jsp" redirect="yes"/>
   <forward name="cancel" path="/proposal_main.jsp" redirect="yes"/>
  </action>
  <action name="type_form" path="/type" scope="session"
   type="org.vegbank.nvcrs.web.type_Action" validate="yes">
   <forward contextRelative="yes" name="success" path="/type_main.jsp" redirect="yes"/>
   <forward contextRelative="yes" name="error" path="/errorpage.jsp" redirect="yes"/>
   <forward contextRelative="yes" name="cancel"
    path="/proposal.go?target=types" redirect="yes"/>
  </action>
  <action name="plot_form" path="/plot" scope="session"
   type="org.vegbank.nvcrs.web.plot_Action" validate="yes">
   <forward name="success" path="/plot_main.jsp" redirect="yes"/>
   <forward name="error" path="/errorpage.jsp" redirect="yes"/>
   <forward name="cancel" path="/type.go?target=plot" redirect="yes"/>
  </action>
  <action name="distribution_form" path="/distribution" scope="session"
   type="org.vegbank.nvcrs.web.distribution_Action" validate="yes">
   <forward name="success" path="/distribution_main.jsp" redirect="yes"/>
   <forward name="error" path="/error_body.jsp" redirect="yes"/>
   <forward name="cancel" path="/type.go?target=distribution" redirect="yes"/>
  </action>
  <action name="composition_form" path="/composition" scope="session"
   type="org.vegbank.nvcrs.web.composition_Action" validate="yes">
   <forward name="error" path="/error_body.jsp" redirect="yes"/>
   <forward name="cancel" path="/type.go?target=composition" redirect="yes"/>
   <forward name="success" path="/composition_main.jsp" redirect="yes"/>
  </action>
  <action name="typename_form" path="/typename" scope="session"
   type="org.vegbank.nvcrs.web.typename_Action" validate="yes">
   <forward name="error" path="/error_body.jsp" redirect="yes"/>
   <forward name="success" path="/typename_main.jsp" redirect="yes"/>
   <forward name="cancel" path="/type.go?target=typename" redirect="yes"/>
  </action>
  <action name="typereference_form" path="/typereference"
   scope="session" type="org.vegbank.nvcrs.web.typereference_Action" validate="yes">
   <forward name="error" path="/error_body.jsp" redirect="yes"/>
   <forward name="success" path="/typereference_main.jsp" redirect="yes"/>
   <forward name="cancel" path="/type.go?target=typereference" redirect="yes"/>
  </action>
 </action-mappings>
 <controller/>
 <message-resources parameter="org.vegbank.nvcrs.util.appResources"/>
 <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
  <set-property property="pathnames" value="/WEB-INF/validator-rules.xml, /WEB-INF/validation.xml"/>
 </plug-in>
</struts-config>
