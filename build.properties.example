# Database Connection Settings
authenticationServletHost = localhost
communityRequestServletHost = localhost
plantRequestServletHost = localhost
geoCoordRequestServletHost = localhost
databaseType = postgresql
databaseUser = [The database user name] 
databaseUserPassword = [ the database user's password ]
databasePort = 1521
hostname = localhost
databaseDriverType = thin
databaseDriverClass = org.postgresql.Driver
databaseConnectString = jdbc:postgresql://localhost/vegbank
databaseName = vegbank
insert.minConnections = 1
insert.maxConnections = 3
query.minConnections = 1
query.maxConnections = 3
maxConnectionUsers = 100
resetTime = 0.01
logFile = connectionPool.log

# MTL new settings as of 24-JUL-2004: (can be removed if JK enabled, such as on vegbank.org)
# name of URL to get to this machine 
machine_url=http://gyro.msi.ucsb.edu
# the colon plus port number used for tomcat.  If JK enabled, neither of these is needed.
eighty_eighty=:8080
mail_host=mail.msi.ucsb.edu

# New value to indicate what image to use: valid options: (none)=vegbank, gyro, aldo
headerImageMachine=aldo


# Vegbank Directories
vegbank.home.dir=/usr/vegbank
vegbank.data.dir=/usr/vegbank/upload
apache.document.root=/var/www/html

# XML Schema
vegbankSchemaName=vegbank-data-ver1.0.2.xsd

# Old Settings
java1.4.home.dir = /usr/java/
